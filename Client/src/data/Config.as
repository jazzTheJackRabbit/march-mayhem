package data{	import flash.external.ExternalInterface;	import services.RemoteCall;		public class Config	{		private static var sparameters:Object;		private static var GATEWAY_PATH:String = "/Gateway/";		private static var IMAGE_PATH:String = "/Content/images/";				public function Config(fparameters:Object):void{			sparameters = fparameters;			try {				if(ExternalInterface.available)					sparameters = ExternalInterface.call("get_flashvars");			} catch (e: Error) {				sparameters = fparameters;			}		}				public static function get user():String		{			if(sparameters == null)				return null;			if(sparameters.user == null)				return null;			return sparameters.user;		}				public static function get username():String		{			if(sparameters == null)				return null;			if(sparameters.username == null)				return null;			return sparameters.username;		}				public static function get user_token():String		{			if(sparameters == null)				return null;			if(sparameters.user_token == null)				return null;			return sparameters.user_token;		}				public static function get gateway():String		{			if(sparameters == null)				return GATEWAY_PATH;			if(sparameters.gateway == null)				return GATEWAY_PATH;			return sparameters.gateway;		}				public static function get imagepath():String		{			if(sparameters == null)				return IMAGE_PATH;			if(sparameters.imagepath == null)				return IMAGE_PATH;			return sparameters.imagepath;		}			}}