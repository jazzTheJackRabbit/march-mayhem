package assets {	import flash.display.DisplayObjectContainer;	import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.text.TextField;		import classes.Pool_Entity;
		public class Friend_Link extends SimpleButton{		public var information:Object;							public function Friend_Link(){														}  				public function setupButtons(name:String):void
		{					var buttonContainer:DisplayObjectContainer;			var buttonText:TextField;												buttonContainer = this.upState as DisplayObjectContainer;			buttonText = buttonContainer.getChildAt(1) as TextField;			buttonText.text = name;									buttonContainer = this.overState as DisplayObjectContainer;			buttonText = buttonContainer.getChildAt(1) as TextField;			buttonText.text = name;										buttonContainer = this.downState as DisplayObjectContainer;			buttonText = buttonContainer.getChildAt(1) as TextField;			buttonText.text = name;			}	}}